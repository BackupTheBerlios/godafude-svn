#!/bin/sh
#
# todo: There should be some more clever tests here

progname=Godafude
qtversion="4.0.0-rc1-snapshot-20050511"
qtlibdir=$QTDIR
qttest=yes

while [ "$#" -gt 0 ]; do
    case $1 in
        --help|-h)
            echo Possible command line options:
            echo
            echo "    --qtdir=<path>      Set QT directory"
            echo "    --qt-no-check       Do not test QT version"
            exit
            ;;
        --qtdir=*)
            qtlibdir=`echo $1 | sed 's,^--qtdir=\(.*\),\1,'`
            ;;
        --qtdir)
            shift
            qtlibdir=$1
            ;;
        --qt-no-check)
            qttest=no
            ;;
        *)
            echo Unknown command line option $1
            exit
    esac
    shift
done

echo "** Note:"
echo "** This development version of $progname needs a late snapshot of"
echo "** QT 4, probably $qtversion"
echo "**"
echo "** This script only tests that _some_ version of QT 4 is"
echo "** installed in "$QTDIR""
echo

echo -n "Testing QT version ... "

if [ $qttest = 'yes' ]; then
    if [ -f $qtlibdir/bin/qt3to4 ]; then
        echo okay
    else
        echo failed
        echo
        echo No suitable version of QT was found.
        echo 'Set $QTDIR to a directory containing'
	echo QT 4, or use the command line option --qtdir=...
        exit
    fi
else
    echo skipped
fi

echo Running qmake
QTDIR=$qtlibdir $qtlibdir/bin/qmake

echo You may now run make
